<CustomBoxLayout@BoxLayout>:
    size_hint_y: 1
    canvas:
        Color:
            rgba: .06, .25, 1, 1

<CustomLabel@Label>
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<CustomButton@Button>:
    font_size: 30
    background_normal: ""
    background_color: 1, 1, 1, 1
    color: 0, 0, 0, 1
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height


<GravityLayout>:
    mass_1: mass_1
    mass_2: mass_2
    radius: radius
    display: display
    orientation : "vertical"
    canvas:
        Color:
            rgba: .06, .25, 1, 1
    CustomLabel:
        text: "GRAVITY CALCULATOR"
    CustomBoxLayout:
        CustomLabel:
            text: "Mass of Object 1"
        CustomLabel:
            text: "Mass of Object 2"
        CustomLabel:
            text: "Distance Between Objects"
    CustomBoxLayout:
        TextInput:
            id: mass_1
            input_filter: "float" # only allows the thing in quotes
            size_hint_x: 3
        TextInput:
            id: mass_2
            input_filter: "float" # only allows the thing in quotes
            size_hint_x: 3
        TextInput:
            id: radius
            input_filter: "float" # only allows the thing in quotes
            size_hint_x: 3
    CustomButton:
        text: "GRAVITIZE!!!!"
        on_press: root.gravitize(mass_1.text, mass_2.text, radius.text)
    CustomLabel:
        id: display
        font_size: 40
        text: ""