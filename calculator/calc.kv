<CustomBoxLayout@BoxLayout>:
    size_hint_y: 1

<CustomButton@Button>:
    font_size: 30
    background_normal: ""
    background_color: 0.85, 0.85, 0.85, 1
    color: 0, 0, 0, 1
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<OrangeButton@CustomButton>
    background_color: 1, .5, 0, 1
    color: 1, 1, 1, 1

<CalcLayout>:
    display: display
    orientation : "vertical"
    TextInput:
        id: display
        font_size: 40
        background_normal: ""
        background_color: .5, .5, .5, 1
    CustomBoxLayout:
        CustomButton:
            text: "AC"
            on_press: root.ac()
        CustomButton:
            text: "("
            on_press: root.tack("(")
        CustomButton:
            text: ")"
            on_press: root.tack(")")
        OrangeButton:
            text: "/"
            on_press: root.tack("/")

    CustomBoxLayout:
        CustomButton:
            text: "7"
            on_press: root.tack("7")
        CustomButton:
            text: "8"
            on_press: root.tack("8")
        CustomButton:
            text: "9"
            on_press: root.tack("9")
        OrangeButton:
            text: "*"
            on_press: root.tack("*")

    CustomBoxLayout:
        CustomButton:
            text: "4"
            on_press: root.tack("4")
        CustomButton:
            text: "5"
            on_press: root.tack("5")
        CustomButton:
            text: "6"
            on_press: root.tack("6")
        OrangeButton:
            text: "-"
            on_press: root.tack("-")

    CustomBoxLayout:
        CustomButton:
            text: "1"
            on_press: root.tack("1")
        CustomButton:
            text: "2"
            on_press: root.tack("2")
        CustomButton:
            text: "3"
            on_press: root.tack("3")
        OrangeButton:
            text: "+"
            on_press: root.tack("+")

    CustomBoxLayout:
        CustomButton:
            text: "0"
            size_hint_x: 2
            on_press: root.tack("0")
        CustomButton:
            text: "."
            on_press: root.tack(".")
        OrangeButton:
            text: "="
            on_press: root.calculate(display.text)