<CustomBoxLayout@BoxLayout>:
    size_hint_y: 1

<CustomButton@Button>:
    font_size: 30
    background_normal: ""
    background_color: 0.85, 0.85, 0.85, 1
    color: 0, 0, 0, 1
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<OrangeButton@CustomButton>
    background_color: 1, .5, 0, 1
    color: 1, 1, 1, 1

<CalcLayout>:
    display: display
    orientation : "vertical"
    TextInput:
        id: display
        font_size: 40
        background_normal: ""
        background_color: ".5, .5, .5, 1"
    CustomBoxLayout:
        CustomButton:
            text: "AC"
        CustomButton:
            text: "("
        CustomButton:
            text: ")"
        OrangeButton:
            text: "/"

    CustomBoxLayout:
        CustomButton:
            text: "7"
        CustomButton:
            text: "8"
        CustomButton:
            text: "9"
        OrangeButton:
            text: "*"

    CustomBoxLayout:
        CustomButton:
            text: "4"
        CustomButton:
            text: "5"
        CustomButton:
            text: "6"
        OrangeButton:
            text: "-"

    CustomBoxLayout:
        CustomButton:
            text: "1"
        CustomButton:
            text: "2"
        CustomButton:
            text: "3"
        OrangeButton:
            text: "+"

    CustomBoxLayout:
        CustomButton:
            text: "0"
            size_hint_x: 2
        CustomButton:
            text: "."
        OrangeButton:
            text: "="
            on_press: root.calculate(display.text)